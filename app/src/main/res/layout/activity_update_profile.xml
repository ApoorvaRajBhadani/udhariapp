<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateProfile">

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/new_firstname_edittext"
        android:hint="First Name"/>
    <EditText
        android:layout_width="280dp"
        android:hint="Last Name"
        android:id="@+id/new_lastname_edittext"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/select_new_profilepic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/new_profile_pic_preview_imageview"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_profiledata_button"
        android:text="Update" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_profiledata_progressbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_upload_status_textview"
        android:text="Show Upload"/>


</LinearLayout>